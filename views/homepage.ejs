<!doctype html>
<html class="no-js" lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="css/foundation.css">
    <link rel="stylesheet" href="css/app.css">
</head>

<body>
    <div class="row">
        <div class="large-12 columns">
            <h1>Welcome to Restaurant</h1>
            <p>User:
                <%=userId%> [<a href="/logout">logout</a>]</p>
            <p>Showing
                <%=restList.length%> document </p>
        </div>
    </div>

    <div class="row">
        <div class="large-12 columns">
            <div class="callout">
                <h5>Search</h5>

                <form method="GET" action="/read">
                    <div class="row">
                        <div class="small-4 columns">
                            <label>Name: <input type="text" name="name" value="<%=criteria.name%>"></label>
                        </div>
                        <div class="small-4 columns">
                            <label>Borough: <input type="text" name="borough" value="<%=criteria.borough%>"></label>
                        </div>
                        <div class="small-4 columns">
                            <label>Cuisine: <input type="text" name="cuisine" value="<%=criteria.cuisine%>"></label>
                        </div>

                    </div>
                    <div class="row">
                        <div class="small-4 columns">
                            <input type="submit" value="Search" class="button" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="large-12 columns">
            <div class="callout">
                <p><a href="/new" class="button">NEW</a><br/>
                    <div class="row">
                        <ul style="list-style-type:none">
                            <% restList.forEach(function(restaurant) { %>
                                <li>
                                    <a href="/display?_id=<%=restaurant._id%>">
                                        <%=restaurant.name%>
                                    </a>
                                </li>
                                <% }); %>
                        </ul>
                    </div>

            </div>
        </div>
    </div>

    <script src="js/vendor/jquery.js"></script>
    <script src="js/vendor/what-input.js"></script>
    <script src="js/vendor/foundation.js"></script>
    <script src="js/app.js"></script>
</body>

</html>
