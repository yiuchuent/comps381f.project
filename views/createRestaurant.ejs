<!doctype html>
<html class="no-js" lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Restaurant</title>
    <link rel="stylesheet" href="css/foundation.css">
    <link rel="stylesheet" href="css/app.css">
  </head>
  <body>
    <div class="row">
      <div class="large-12 columns">
        <h1>Create Restaurant</h1>
      </div>
    </div>

    <div class="row">
      <div class="large-8 medium-8 columns">
        <!-- Grid Example -->

        <hr />

        <h5>Enter the following information:</h5>
<% if (message)  { %>
	<div class="callout alert"><h5>Error </h5><p><%=message%></p></div>

<% } %> 
        <form action="/createRestaurant" method="post" encType="multipart/form-data">
          <div class="row">
            <div class="large-12 columns">
              <label>Name</label>
              <input type="text" name="name"placeholder="Name" />
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <label>Borough</label>
              <input type="text" name="borough" placeholder="Borough" />
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <label>Cuisine</label>
              <input type="text" name="cuisine" placeholder="Cuisine" />
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <label>Street</label>
              <input type="text" name="street" placeholder="Street" />
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <label>Building</label>
              <input type="text" name="building" placeholder="Building" />
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <label>Zipcode</label>
              <input type="text" name="zipcode" placeholder="Zipcode" />
            </div>
          </div>
          <div class="row">
	    <div class="large-12 columns">
              <label>GPS Coordinates (lon.)</label>
              <input type="text" name="lon" placeholder="GPS Coordinates (lon.)" />
            </div>
          </div>
          <div class="row">
			<div class="large-12 columns">
              <label>GPS Coordinates (lat.)</label>
              <input type="text" name="lat" placeholder="GPS Coordinates (lat.)" />
            </div>
          </div>
          <div class="row">
			<div class="large-12 columns">
              <label>Photo</label>
              <input type="file" name="photo"/>
            </div>
          </div>
			 <input type="submit" value="Create" />
        </form>
      </div>


    </div>

    <script src="js/vendor/jquery.js"></script>
    <script src="js/vendor/what-input.js"></script>
    <script src="js/vendor/foundation.js"></script>
    <script src="js/app.js"></script>
  </body>
</html>
